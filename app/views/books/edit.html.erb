<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="errors_message">
  <h2 class="errors_nunber"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    
      <li><%= message %></li>
      <% end %>
  </ul>
</div>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<label>Title</label>
<div>

<%= f.text_field :title %>
</div>
<label>Body</label>
<div>
    
<%= f.text_area :body %>
</div>
<div>
<%= f.submit "Update Book" %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
